<?xml version="1.0" encoding="utf-8"?>

<!--프레임안에 스크롤안에 리니어안에...?-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".Fragment_Add">

        <!-- TODO: Update blank fragment layout -->
        <!--스크롤 뷰-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--이름-->
                <TextView
                    android:id="@+id/addName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이름을 입력해주세요"
                    android:focusable="true"/>

                <!--성별-->
                <TextView
                    android:id="@+id/addSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailSex"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="무"/>
                </RadioGroup>

                <!--이미지-->
                <TextView
                    android:id="@+id/addImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailImage"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />

                <!--간단 프로필-->
                <TextView
                    android:id="@+id/addAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailAge"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="세"
                    android:focusable="true"
                    />

                <TextView
                    android:id="@+id/addCm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailCm"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="cm"
                    android:focusable="true"
                    />

                <TextView
                    android:id="@+id/addKg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailKg"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="kg"
                    android:focusable="true"
                    />

                <!--상세정보-->
                <TextView
                    android:id="@+id/addInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailInfo"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:id="@+id/editTextTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:hint="내용을 입력해주세요."
                    />

                <!--android:ems="10" 텍스트 입력뷰 너비설정
                  android:singleLine="false" 이렇게 안해도
                  android:inputType="textMultiLine" 이렇게 하면 여러줄 가능
                -->

                <!--태그-->
                <TextView
                    android:id="@+id/addTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detailTag"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="태그를 입력해주세요."
                    android:focusable="true"
                    />
        </LinearLayout>
    </ScrollView>
</FrameLayout>

